@model TH_Harmic.Models.TbProduct

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="mb-2">
                <div class="col-sm-12">
                    <h1>Chi tiết sản phẩm</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin chi tiết sản phẩm</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tiêu đề</label>
                                <input disabled value="@Model.Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Bí danh</label>
                                <input disabled value="@Model.Alias" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea disabled class="form-control">@Model.Description</textarea>
                            </div>
                            <div class="form-group">
                                <label>Chi tiết</label>
                                <textarea disabled class="form-control">@Model.Detail</textarea>
                            </div>
                            <div class="form-group">
                                <label>Hình ảnh</label>
                                <input disabled value="@Model.Image" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                <input disabled value="@Model.Price" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Giá khuyến mãi</label>
                                <input disabled value="@Model.PriceSale" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input disabled value="@Model.Quantity" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Ngày tạo</label>
                                <input disabled value="@Model.CreatedDate" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Người tạo</label>
                                <input disabled value="@Model.CreatedBy" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Ngày sửa</label>
                                <input disabled value="@Model.ModifiedDate" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Người sửa</label>
                                <input disabled value="@Model.ModifiedBy" class="form-control" />
                            </div>
                            <div class="form-group form-check">
                                <label>
                                    <input disabled type="checkbox" class="form-check-input" @(Model.IsActive ? "checked" : "") /> Hiển thị
                                </label>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Sửa</a>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
