@model TH_Harmic.Models.TbProduct

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="mb-2">
                <div class="col-sm-12">
                    <h1>Sửa sản phẩm</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- General Form -->
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Sửa sản phẩm</h3>
                    </div>
                    <!-- /.card-header -->
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Tên sản phẩm</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Alias" class="control-label">Đường dẫn</label>
                                <input asp-for="Alias" class="form-control" />
                                <span asp-validation-for="Alias" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryProductId" class="control-label">Danh mục</label>
                                <select asp-for="CategoryProductId" class="form-control" asp-items="ViewBag.CategoryProductId"></select>
                                <span asp-validation-for="CategoryProductId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Mô tả</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <img src="@Model.Image" alt="Product Image" style="max-width: 200px; max-height: 200px;" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="control-label">Ảnh</label>
                                <div class="input-group mb-3">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-success" onclick="openDialog()">Choose a picture</button>
                                    </div>
                                </div>
                                <input type="text" class="form-control" id="file_input" asp-for="Image" aria-describedby="button-addon2" />

                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label">Giá</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PriceSale" class="control-label">Giá khuyến mãi</label>
                                <input asp-for="PriceSale" class="form-control" />
                                <span asp-validation-for="PriceSale" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Quantity" class="control-label">Số lượng</label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsActive" /> Hiển thị
                                </label>
                            </div>
                        </div>

                        <div class="card-footer">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@{
    var summerNote = new TH_Harmic.Areas.Admin.Models.SummerNote("#Detail");
    <partial name="_SummerNote" model="summerNote" />
}

